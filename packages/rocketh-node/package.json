{
	"name": "@rocketh/node",
	"version": "0.19.2",
	"description": "rocketh for server-side JS runtime like node, including a cli",
	"keywords": [
		"rocketh",
		"ethereum",
		"deployment",
		"test"
	],
	"author": "Ronan Sandford",
	"license": "MIT",
	"homepage": "https://github.com/wighawag/rocketh/blob/main/packages/rocketh-node/README.md",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/wighawag/rocketh.git",
		"directory": "packages/rocketh-ode"
	},
	"bugs": {
		"url": "https://github.com/wighawag/rocketh/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		}
	},
	"files": [
		"dist",
		"src"
	],
	"bin": {
		"rocketh": "dist/cli.js"
	},
	"dependencies": {
		"@rocketh/core": "workspace:*",
		"@types/prompts": "^2.4.9",
		"change-case": "^5.4.4",
		"commander": "^14.0.3",
		"eip-1193": "^0.6.5",
		"ldenv": "^0.3.16",
		"named-logs": "^0.4.1",
		"named-logs-console": "^0.5.1",
		"prompts": "^2.4.2",
		"tsx": "^4.21.0",
		"viem": "^2.45.1"
	},
	"devDependencies": {
		"@types/node": "^25.1.0",
		"as-soon": "^0.1.5",
		"ipfs-gateway-emulator": "4.2.1-ipfs.2",
		"rimraf": "^6.1.2",
		"rocketh": "workspace:*",
		"typedoc": "^0.28.16",
		"typescript": "^5.9.3"
	},
	"peerDependencies": {
		"rocketh": "workspace:*"
	},
	"scripts": {
		"prepublishOnly": "cp ../../LICENSE LICENSE",
		"build": "tsc --project tsconfig.json",
		"dev": "as-soon -w src pnpm build",
		"gen-docs": "typedoc --out docs src",
		"serve-docs": "ipfs-emulator --only -d docs -p 8080"
	}
}
